<Window x:Class="mi_teper_discord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mi_teper_discord"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        
        <ListView ItemsSource="{Binding Chats}" ItemTemplate="{Binding Chat}" >
        </ListView>
        <TextBox Text="{Binding Author}"/>
        <TextBox Text="{Binding Text}"/>
        <Button  Content="Отправить" Click="SendMessage"/>
    </StackPanel>
</Window>
